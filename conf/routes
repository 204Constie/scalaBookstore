# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#product
GET     /books                      controllers.Product.productsGet
GET     /books/:productId           controllers.Product.productGet(productId: Int)
POST    /books/:productId           controllers.Product.productPost(productId: Int)
DELETE  /books/:productId           controllers.Product.productDelete(productId: Int)

#shopping cart
GET     /cartitems                  controllers.CartItems.cartItemsGet
GET     /cartitems/:cartItemId      controllers.CartItems.cartItemGet(cartItemId: Int)
POST    /cartitems/:cartItemId      controllers.CartItems.cartItemPost(cartItemId: Int)
DELETE  /cartitems/:cartItemId      controllers.CartItems.cartItemDelete(cartItemId: Int)

#order
POST    /order                      controllers.Order.postOrder
DELETE  /order/:orderId             controllers.Order.deleteOrder(orderId: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    